	MPEquation();</script><!-- )MP EQ --> and <!-- MP EQ( --><script>
	MPSetEqnAttrs('eq0002','',3,[[48,12,3,-1,-1],[64,16,4,-1,-1],[80,20,5,-1,-1],[72,19,5,-1,-1],[96,24,6,-1,-1],[120,31,8,-2,-2],[200,52,14,-3,-3]]);
	MPEquation();</script><!-- )MP EQ -->,
where <!-- MP EQ( --><script>
	MPSetEqnAttrs('eq0003','',3,[[54,12,3,-1,-1],[73,16,4,-1,-1],[92,20,5,-1,-1],[83,19,5,-1,-1],[109,24,6,-1,-1],[135,31,8,-2,-2],[222,51,13,-3,-3]]);
	MPEquation();</script><!-- )MP EQ --> is the wavelength of the light in vacuum. The
corresponding angular wave numbers are <!-- MP EQ( --><script>
	MPSetEqnAttrs('eq0004','',3,[[48,12,3,-1,-1],[65,16,4,-1,-1],[80,20,5,-1,-1],[72,19,5,-1,-1],[96,24,6,-1,-1],[120,31,8,-2,-2],[200,52,14,-3,-3]]);
